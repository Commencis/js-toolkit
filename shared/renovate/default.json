{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "group:nodeJs",
    ":enableVulnerabilityAlerts",
    ":separateMultipleMajorReleases",
    "schedule:weekly",
    ":maintainLockFilesWeekly",
    ":automergeDisabled",
    ":prConcurrentLimit10"
  ],
  "timezone": "Europe/Istanbul",
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
